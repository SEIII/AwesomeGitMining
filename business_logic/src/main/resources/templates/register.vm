<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>GitMining  | Registration</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="plugins/iCheck/square/blue.css">
      
      <!-- jQuery 2.1.4 -->
    <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
      
      
      <script type="text/javascript">
        function submitBtn(){
            alert("before");
            var form = $("form[name=register]");
            var options = {
                url: '/registerVerify',
                success:function(data){
                    alert(data);
                }
            };
            form.ajaxSubmit(options);
            alert("after");
        }
      
      </script>
      
      <style type="text/css">
      	.Absolute-Center {
						display: table-cell;
						height: 30px;
						vertical-align: middle;
				}
      </style>
      
  </head>
  <body class="hold-transition register-page">
    <div class="register-box">
      <div class="register-logo">
        <a href="#"><b>Git</b>MiNing</a>
      </div>

      <div class="register-box-body">
        <p class="login-box-msg">You are so special</p>
          
        
        
          
        <form id="register" name="register" action="/registerVerify" method="post">
          
          #if($state.equals("GITID"))
          
          <div class="form-group has-error">
	           <input name="gitid" type="text" class="form-control" id="inputError" placeholder="GitHub login NOT exists">
          		<span class="fa fa-github form-control-feedback"></span>
          </div>
          
          #else
          <div class="form-group has-feedback">
            <input name="gitid" type="text" class="form-control" placeholder="GitHub Login">
            <span class="fa fa-github form-control-feedback"></span>
          </div>
          #end
          
          #if($state.equals("ACCOUNT"))
           <div class="form-group has-error">
	           <input name="account" type="text" class="form-control" id="inputError" placeholder="Login exists">
         			<span class="glyphicon glyphicon-user form-control-feedback"></span>
           </div>
          #else
          <div class="form-group has-feedback">
            <input name="account" type="text" class="form-control" placeholder="Login">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
          </div>
          #end
            
          <div class="form-group has-feedback">
            <input name="password" type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
            
          <!--<div class="form-group has-feedback">
            <input name="repassword" type="password" class="form-control" placeholder="Retype password">
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
          </div>-->
            
          <div class="row">
            <div class="col-xs-8">
            	<a href="/login" class="text-center Absolute-Center">I already have a membership</a>
              <!--<div class="checkbox icheck">
                <label>
                  <input type="checkbox"> I agree to the <a href="#">terms</a>
                </label>
              </div>-->
            </div> 
            <div class="col-xs-4">
              <button  type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
            </div><!-- /.col -->
          </div>
        </form>
          
          
          #if($state.equals("GOOD"))
          <script type="application/javascript">
            alert("Register Successfully");
          </script>
        #end

        <!--<a href="/login" class="text-center">I already have a membership</a>-->
      </div><!-- /.form-box -->
    </div><!-- /.register-box -->

    <!-- jQuery 2.1.4 -->
    <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="plugins/iCheck/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
  </body>
</html>
